{
    "name": "Random Emoji Generator",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Generate Random number of Emojis to annoy your friends XD",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "REG",
      "default_popup": "popup.html"
    },
    "permissions": [
      "https://*/*"
    ],
    "content_security_policy": "default-src 'self';"
  }
  
